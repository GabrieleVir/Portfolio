<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<div class="container">
  <% @categories.each do |category| %>
    <div class="row">
      <h2><%= category.name %></h2>
    </div>
    <div class="row">
      <% @projects.each do |project| %>
        <% if project.category.name == category.name %>
            <div class="col-md-3 col-lg-3 text-center"> 
              <div class="layout-projects">
                <h3><%= project.title %></h3>
                <% if project.img_url %>
                  <img src="<%= project.img_url %>" alt="Image du projet" class="img-projects">
                <% end %>
                <p><%= project.description %></p>
                <p><%= project.content %></p>
                <a href="<%= project_path(project.id) %>" class="btn btn-primary a-button">Lire la suite</a>
              </div>
            </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th>Img url</th>
      <th>Git url</th>
      <th>Category Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.content %></td>
        <td><%= project.img_url %></td>
        <td><%= project.git_url %></td>
        <td><%= project.category_id %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

